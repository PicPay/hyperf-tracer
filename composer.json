{
    "name": "hyperf/tracer",
    "description": "An open tracing system implemented for PicPay's Hyperf microservices",
    "license": "MIT",
    "keywords": [
        "php",
        "hyperf",
        "open-tracing",
        "jaeger"
    ],
    "homepage": "https://github.com/PicPay/hyperf-tracer",
    "support": {
        "docs": "https://github.com/PicPay/hyperf-tracer/wiki",
        "issues": "https://github.com/PicPay/hyperf-tracer/issues",
        "pull-request": "https://github.com/PicPay/hyperf-tracer/pulls",
        "source": "https://github.com/PicPay/hyperf-tracer"
    },
    "require": {
        "php": ">=7.4",
        "ext-json": "*",
        "hyperf/contract": "~2.2.0",
        "hyperf/di": "~2.2.0",
        "hyperf/guzzle": "~2.2.0",
        "hyperf/utils": "~2.2.0",
        "jonahgeorge/jaeger-client-php": "^1.2",
        "opentracing/opentracing": "^1.0",
        "psr/http-message": "^1.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.1",
        "hyperf/config": "^2.2",
        "hyperf/database": "^2.2",
        "hyperf/event": "^2.2",
        "hyperf/http-message": "^2.2",
        "hyperf/redis": "^2.2",
        "mockery/mockery": "^1.4",
        "phpunit/phpunit": "^9.5",
        "psr/http-server-handler": "^1.0",
        "psr/http-server-middleware": "^1.0",
        "roave/security-advisories": "dev-latest"
    },
    "suggest": {
        "hyperf/event": "Required to use DbQueryExecutedListener.",
        "jcchavezs/zipkin-opentracing": "Required to use zipkin tracing."
    },
    "autoload": {
        "psr-4": {
            "Hyperf\\Tracer\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
        }
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.2-dev"
        },
        "hyperf": {
            "config": "Hyperf\\Tracer\\ConfigProvider"
        }
    }
}
